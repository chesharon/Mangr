<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:padding="5dp">

    <!--  ListRow Left side Thumbnail image -->
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/thumbnail"
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_weight="0.2"
            android:layout_height="wrap_content"
            android:padding="3dp"
            android:layout_alignParentLeft="true"
            android:layout_marginRight="5dp">

            <ImageView
                android:id="@+id/list_image"
                android:layout_width="75dp"
                android:layout_height="75dp" />

        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_weight="0.6"
            android:layout_height="wrap_content">

            <!-- Manga Title -->
            <TextView
                android:id="@+id/manga_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/thumbnail"
                android:layout_toRightOf="@+id/thumbnail"
                android:text="Naruto"
                android:textColor="#040404"
                android:typeface="sans"
                android:textSize="15dp"
                android:textStyle="bold" />

            <!-- Author Name -->
            <TextView
                android:id="@+id/manga_authors"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/manga_title"
                android:text="Author(s): Kishimito-masashi"
                android:textColor="#343434"
                android:textSize="10dp"
                android:layout_marginTop="10dp"
                android:layout_toRightOf="@+id/thumbnail" />

            <!-- Artist Name -->
            <TextView
                android:id="@+id/manga_artists"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/manga_authors"
                android:text="Artist(s): Kishimoto-masashi"
                android:textColor="#343434"
                android:textSize="10dp"
                android:layout_marginTop="10dp"
                android:layout_toRightOf="@+id/thumbnail" />

        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_weight="0.2"
            android:layout_height="wrap_content">

            <!-- Right-end Arrow -->
            <ImageView
                android:id="@+id/arrow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/arrow_down"
                android:layout_alignParentRight="true"
                android:layout_alignTop="@+id/manga_title"
                android:gravity="right"
                android:layout_marginLeft="20dp" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>